<Window x:Class="BackgroundImageSorterGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BackgroundImageSorterGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel>
            <Grid DockPanel.Dock="Top">
                <Button Content="Browse..."
                Height="23"
                HorizontalAlignment="Left"
                Margin="401,18,0,0"
                Name="button1"
                VerticalAlignment="Top"
                Width="75"
                />
                <TextBox Height="23"
                 HorizontalAlignment="Left"
                 Margin="12,19,0,0"
                 Name="textBox1"
                 VerticalAlignment="Top"
                 Width="371" />
            </Grid>
            <Grid DockPanel.Dock="Top">
                <Button Name="ChooseDatabaseFile" 
                        Height="23"
                HorizontalAlignment="Left"
                Margin="401,18,0,0"
                Content="Choose Database"
                VerticalAlignment="Top"
                Width="75" />
                <TextBox Height="23"
                 HorizontalAlignment="Left"
                 Margin="12,19,0,0"
                 Name="textBox2"
                 VerticalAlignment="Top"
                 Width="371" />
            </Grid>
            <Grid DockPanel.Dock="Top">

                <Button Name="ChooseInputFolder" 
                        Height="23"
                HorizontalAlignment="Left"
                Margin="401,18,0,0"
                
                VerticalAlignment="Top"
                Width="75">Choose Input Folder</Button>

                <TextBox Height="23"
                 HorizontalAlignment="Left"
                 Margin="12,19,0,0"
                 Name="textBox3"
                 VerticalAlignment="Top"
                 Width="371" />
            </Grid>
            <StackPanel>
                <Button Name="CheckForUniquePhotos" Click="CheckForUniquePhotos_Click" Margin="12,5,12,5" MaxWidth="200">Check For New Photos</Button>
                <ListBox ItemsSource="{Binding Photos}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </DockPanel>
       
    </Grid>
</Window>
